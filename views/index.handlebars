

  <div class="jumbotron">
    <h1>Eat-Da-Burger</h1>
    <br>
  
<img src= "../public/img/burger.png">
      <form class="create-form">
        <div class="form-group">
          <label for="newburger">Burgers You Want To Try:</label>
          <input type="text" id="newburger" name="burger">
          <button type="submit" class="btn btn-success" id="addburger">Add It To The List!!</button>
        </div>
      </form>

  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading"><h3>Burgers You Want to Try:</h3></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <h4> {{this.id}} - {{this.burger_name}} </h4>
            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}">Devour</button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>


    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Burgers You Devoured</h3>
          </div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <h4> {{this.id}} - {{this.burger_name}} </h4>
          
            <hr>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

